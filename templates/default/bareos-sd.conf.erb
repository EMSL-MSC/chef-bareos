Storage {
  Name = <%= node[:hostname] %>-sd
  Maximum Concurrent Jobs = 20
}

Director {
  Name = <%= node[:hostname] %>-dir
  Password = "<%= @sd_password %>"
}

Director {
  Name = <%= node[:hostname] %>-mon
  Password = "<%= @mon_password %>"
  Monitor = yes
}

Device {
  Name = FileStorage
  Media Type = File
  Archive Device = /var/lib/bareos/storage
  LabelMedia = yes;
  Random Access = Yes;
  AutomaticMount = yes;
  RemovableMedia = no;
  AlwaysOpen = no;
}

Messages {
  Name = Standard
  director = <%= node[:hostname] %>-dir = all
}