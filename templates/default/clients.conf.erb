<%# BAREOS CLIENT TEMPLATE %>
# Generated by Chef for <%= @bareos_client['fqdn'] %>-fd
# Local modifications will be overwritten.
#
# Bareos Client Configuration File

# Borrowed some logic from the Nagios Cookbook
<% @clients.each do |client| %>
Client {
  Name = <%= client['bareos']['clients']['name'] %>
  <% @client.each do |key,items| %>
    <% case items %>
    <% when String %>
<%= key + '=' + items %>
    <% when Fixnum %>
<%= key + '=' + items.to_s %>
    <% when Array %>
      <% items.each do |item| %>
<%= key + '=' + item %>
      <% end %>
    <% end %>
  <% end %>
}
<% end %>
