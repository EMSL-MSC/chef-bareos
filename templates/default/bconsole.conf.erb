Director {
  Name = <%= director %>-dir
  DIRport = <%= node['bareos']['director']['dir_port'] %>
  address = <%= director %>
  Password = "<%= node['bareos']['dir_password'] %>"
}
  <% end %>
<% else %>
  <%# @bareos_dir_hostname.zip(@bareos_dir_fqdn).each do |hostname, fqdn| %>
