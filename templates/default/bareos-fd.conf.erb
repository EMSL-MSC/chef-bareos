Director {
  Name = backup-dir
  Password = "<%= node['bareos']['fd_password'] %>"
}

Director {
  Name = bareos-mon
  Password = "<%= node['bareos']['mon_password'] %>"
  Monitor = yes
}

FileDaemon {
  Name = <%= node[:hostname] %>-fd
  Maximum Concurrent Jobs = 20
}

Messages {
  Name = Standard
  director = backup-dir = all, !skipped, !restored
}
