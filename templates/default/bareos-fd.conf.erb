Director {
  Name = <%= node[:hostname] %>-dir
  Password = "<%= node['bareos']['fd_password'] %>"
}

Director {
  Name = <%= node[:hostname] %>-mon
  Password = "<%= node['bareos']['mon_password'] %>"
  Monitor = yes
}

FileDaemon {
  Name = <%= node[:hostname] %>-fd
  Maximum Concurrent Jobs = 20
}

Messages {
  Name = Standard
  director = <%= node[:hostname] %>-dir = all, !skipped, !restored
}
